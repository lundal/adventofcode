import StringUtils


-- Part 1


findFloor : String -> Int -> Int
findFloor instructions currentFloor =
    let
        ( next, rest ) =
            StringUtils.splitAt 1 instructions
    in
        if next == "(" then
            findFloor rest (currentFloor + 1)
        else if next == ")" then
            findFloor rest (currentFloor - 1)
        else
            currentFloor



-- Part 2


findPosition : String -> Int -> Int -> Int
findPosition instructions currentFloor currentPosition =
    let
        ( next, rest ) =
            StringUtils.splitAt 1 instructions
    in
        if currentFloor < 0 then
            currentPosition
        else if next == "(" then
            findPosition rest (currentFloor + 1) (currentPosition + 1)
        else if next == ")" then
            findPosition rest (currentFloor - 1) (currentPosition + 1)
        else
            Debug.crash "Not enough lisp!"



